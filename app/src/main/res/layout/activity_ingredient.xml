<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".MonitoringActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bold"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/brown"
        android:text="@string/app_name_big" />

    <FrameLayout
        android:id="@+id/view_ingredient_camera"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="81dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/bg_rectangle_secondary_white">

        <LinearLayout
            android:id="@+id/view_ingredient_camera_not_connected"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="43dp"
                android:layout_height="33dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_camera"
                android:contentDescription="@string/desc_icon_camera" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/medium"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                android:textColor="@color/semiprimary_white"
                android:text="@string/ingredient_camera_not_connect" />
        </LinearLayout>

        <TextView
            android:id="@+id/btn_ingredient_detect_ingredient"
            android:layout_width="102dp"
            android:layout_height="38dp"
            android:background="@drawable/btn_detect_ingredient"
            android:text="@string/main_button_detect_ingredient"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/bold"
            android:textSize="12sp"
            android:textColor="@color/secondary_white"
            android:gravity="center" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="461dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold"
            android:textColor="@color/brown"
            android:textSize="20sp"
            android:text="@string/ingredient_detected_ingredient" />

        <TextView
            android:id="@+id/btn_ingredient_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/semiprimary_blue"
            android:textColor="@color/primary_blue"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/medium"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:paddingTop="2dp"
            android:layout_marginStart="8dp"
            android:paddingBottom="2dp"
            android:text="@string/ingredient_edit"
            android:textSize="12sp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_ingredient_ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="503dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom">

        <LinearLayout
            android:id="@+id/btn_ingredient_suggest"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:elevation="8dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/btn_rectangle_white">
            
            <ImageView
                android:layout_width="23dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_tomato"
                android:contentDescription="@string/desc_icon_tomato" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:textSize="14sp"
                android:layout_marginStart="12dp"
                android:textColor="@color/primary_red"
                android:text="@string/ingredient_button_suggest" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <LinearLayout
            android:id="@+id/ingredient_button_add_ingredient"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp"
            android:elevation="8dp"
            android:background="@drawable/btn_rectangle_red">

            <ImageView
                android:layout_width="23dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_bread"
                android:contentDescription="@string/desc_icon_bread" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:textSize="14sp"
                android:layout_marginStart="12dp"
                android:textColor="@color/white"
                android:text="@string/ingredient_button_add_ingredient" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>