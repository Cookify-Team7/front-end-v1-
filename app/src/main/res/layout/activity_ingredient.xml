<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".MonitoringActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_ingredient_back"
            style="?attr/borderlessButtonStyle"
            android:layout_width="33dp"
            android:layout_height="20dp"
            android:backgroundTint="@android:color/transparent"
            app:icon="@drawable/ic_chevron_left"
            app:iconTint="@color/brown" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold"
            android:textSize="20sp"
            android:textColor="@color/brown"
            android:text="@string/ingredient_title" />
    </LinearLayout>


    <FrameLayout
        android:id="@+id/view_ingredient"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/frg_preview_camera"
        android:layout_marginTop="33dp"
        android:layout_gravity="center" >

        <LinearLayout
            android:id="@+id/view_ingredient_not_connected"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="43dp"
                android:layout_height="33dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/icon_camera" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/medium"
                android:textSize="14sp"
                android:layout_marginTop="20dp"
                android:textColor="@color/semiprimary_white"
                android:text="@string/cammera_not_connected" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_ingredient_dectect"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="20dp"
            android:visibility="visible"
            android:fontFamily="@font/medium"
            android:textSize="14sp"
            android:background="@drawable/ingredient_btn_detect"
            android:backgroundTint="@null"
            app:backgroundTint="@null"
            android:textColor="@color/semiprimary_black"
            android:text="@string/ingredient_button_detect"
            android:elevation="0dp"
            android:stateListAnimator="@null" />

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/bold"
        android:textSize="16sp"
        android:textColor="@color/primary_black"
        android:text="@string/ingredient_find_title" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_monitoring_ingredients"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp" />


    <LinearLayout
        android:id="@+id/btn_ingredient_suggest"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_gravity="end"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:includeFontPadding="false"
        android:clickable="true"
        android:visibility="gone"
        android:gravity="center"
        android:background="@drawable/ingredient_btn_recipe"
        android:backgroundTint="@null"
        android:orientation="horizontal"
        app:backgroundTint="@null" >

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            app:srcCompat="@drawable/icon_bread" />

        <TextView
            android:text="@string/ingredient_button_suggest"
            android:textColor="@color/semiprimary_black"
            android:fontFamily="@font/semibold"
            android:textSize="16sp"
            android:layout_marginStart="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>