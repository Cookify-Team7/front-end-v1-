<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bold"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/brown"
        android:text="@string/app_name_big" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bold"
        android:layout_marginTop="54dp"
        android:layout_marginStart="20dp"
        android:textSize="20sp"
        android:textColor="@color/brown"
        android:text="@string/main_title_description" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="246dp"
        android:layout_marginTop="131dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/bg_rectangle_secondary_white">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center | top"
            android:src="@drawable/img_main" />


        <TextView
            android:id="@+id/btn_main_detect_ingredient"
            android:layout_width="102dp"
            android:layout_height="38dp"
            android:background="@drawable/btn_detect_ingredient"
            android:text="@string/main_button_detect_ingredient"
            android:layout_gravity="center |bottom"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/bold"
            android:textSize="12sp"
            android:textColor="@color/secondary_white"
            android:gravity="center" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="394dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/main_button_saved_recipe"
            android:layout_width="180dp"
            android:layout_height="136dp"

            android:layout_marginStart="20dp"
            android:orientation="vertical"
            android:background="@drawable/bg_rectangle_secondary_white">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="19dp"
                android:src="@drawable/icon_tomato" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/third_black"
                android:fontFamily="@font/bold"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="@string/main_button_saved_recipe" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/medium"
                android:textColor="@color/semiprimary_black"
                android:text="@string/main_button_saved_recipe_default" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <LinearLayout
            android:id="@+id/main_button_menu"
            android:layout_width="180dp"
            android:layout_height="136dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="10dp"
            android:orientation="vertical"
            android:background="@drawable/bg_rectangle_secondary_white">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="19dp"
                android:src="@drawable/icon_marsh" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/third_black"
                android:fontFamily="@font/bold"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="@string/main_button_menu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/medium"
                android:textColor="@color/semiprimary_black"
                android:text="@string/main_button_menu_default" />
        </LinearLayout>
    </LinearLayout>



</FrameLayout>