<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- 중요한 앱 데이터는 포함 -->
        <include domain="sharedpref" />
        <include domain="database" />
        <include domain="file" />
        <!-- 캐시 및 재생성 가능한 파일은 제외 -->
        <exclude domain="cache" />
        <exclude domain="external-cache" />
    </cloud-backup>

    <device-transfer>
        <!-- 기기 간 전송 시에도 동일 정책 적용 -->
        <include domain="sharedpref" />
        <include domain="database" />
        <include domain="file" />
        <exclude domain="cache" />
        <exclude domain="external-cache" />
    </device-transfer>
</data-extraction-rules>