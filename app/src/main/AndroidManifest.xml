<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- 카메라 사용 권한 선언 -->
    <uses-permission android:name="android.permission.CAMERA" tools:ignore="CameraPermission"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-feature android:name="android.hardware.camera" android:required="false"/>
    <uses-feature android:name="android.hardware.camera.any" android:required="false"/>
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false"/>

    <application
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Maratang.Splash"
        tools:targetApi="31">
        <activity
            android:name=".LoadingActivity"
            android:exported="true"
            android:theme="@style/Theme.Maratang">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SuggestActivity"
            android:exported="false"
            android:theme="@style/Theme.Maratang"/>
        <activity
            android:name=".AiChatActivity"
            android:exported="false"
            android:theme="@style/Theme.Maratang" />
        <activity
            android:name=".IngredientActivity"
            android:exported="false"
            android:theme="@style/Theme.Maratang" />
        <activity
            android:name=".MonitoringActivity"
            android:exported="false"
            android:theme="@style/Theme.Maratang" />
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.Maratang">
        </activity>
        <activity
            android:name="com.smn.maratang.recipes.detail.RecipeDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.Maratang" />
    </application>

</manifest>